@model IEnumerable<DAL.Models.Post>
@{
    ViewData["Title"] = "Home Page";
}

<div class="fixed-header">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Домова служба</a>
        </div>
        <nav class="main-menu">
            <ul>
                <li><a href="#home">Дім</a></li>
                <li><a href="#answer">Залишити відгук</a></li>
                <li><a class="external" href="https://www.facebook.com/groups/1566689436903884/" target="_blank">FB</a></li>
                <li><a href="#contact">Контакти</a></li>
                <li>
                </li>
            </ul>
        </nav>
    </div>
</div>
<div class="container" id="home">
    @for (var i = 0; i < Model.Count(); i += 2)
    {
        <section class="col-md-12 content">
            <div class="col-lg-6 col-md-6 content-item">
                <img src="@Html.DisplayFor(modelItem => Model.ElementAt(i).Img)" alt="Image" class="tm-image">
            </div>
            <div class="col-lg-6 col-md-6 content-item content-item-1 background">
                <span class="light-blue-text">@Html.DisplayFor(modelItem => Model.ElementAt(i).Date)</span>
                <h2 class="main-title text-center dark-blue-text"></h2>
                <h2 class="section-title dark-blue-text">
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).Theme)
                </h2>
                <p>
                    @Html.DisplayFor(modelItem => Model.ElementAt(i).Text)
                </p>
                <button type="button" class="btn btn-big dark-blue-bordered-btn">Додати відгук</button>
                <button type="button" class="btn btn-big dark-blue-btn">Читати</button>
            </div>
        </section>
        @if (i + 1 < Model.Count())
        {
            <section class="col-md-12 content">
                <div class="col-lg-6 col-md-6 col-md-push-6 content-item">
                    <img src="@Html.DisplayFor(modelItem => Model.ElementAt(i + 1).Img)" alt="Image" class="tm-image">
                </div>
                <div class="col-lg-6 col-md-6 col-md-pull-6 content-item background flexbox">
                    <span class="light-blue-text">@Html.DisplayFor(modelItem => Model.ElementAt(i).Date)</span>
                    <h2 class="section-title">@Html.DisplayFor(modelItem => Model.ElementAt(i + 1).Theme)</h2>
                    <p class="section-text">@Html.DisplayFor(modelItem => Model.ElementAt(i + 1).Text)</p>
                    <div>
                        <button type="button" class="btn dark-blue-bordered-btn normal-btn">Small Button</button>
                        <button type="button" class="btn yellow-btn normal-btn">Download</button>
                        <button type="button" class="btn green-btn normal-btn">Demo</button>
                    </div>
                </div>
            </section>
        }
    }

    <h2 class="main-title text-center dark-blue-text">---</h2>



    <section class="col-md-12 content" id="answer">
        <div class="col-lg-6 col-md-6 col-md-push-6 content-item">
            <img src="~/img/3.png" alt="Image" class="tm-image">
        </div>
        <div class="col-lg-6 col-md-6 col-md-pull-6 content-item background flexbox">
            <h2 class="section-title">Написати</h2>
            <p class="margin-b-25">Якщо ви хочете залишити відгук або внести пропозицію, напишіть сюди</p>

            <!--<div class="row"> -->
            <form method="post" name="contact-form" class="contact-form">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-group">
                        <input name="name" type="text" class="form-control" id="name" placeholder="Ім'я..." required>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pad-l-3">
                    <div class="form-group contact-field">
                        <input name="email" type="email" class="form-control" id="email" placeholder="Ваша електронна адреса..." required>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group contact-field">
                        <input name="subject" type="text" class="form-control" id="subject" placeholder="Тема..." required>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group contact-field">
                        <textarea name="message" rows="5" class="form-control" id="message" placeholder="Повідомлення..." required></textarea>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group margin-b-0">
                        <button type="submit" id="form-submit" class="btn no-bg btn-contact">Відправити</button>
                    </div>
                </div>
            </form>
            <!--</div> -->
            <div id="msgSubmit" class="h3 text-center hidden">Повідомлення відправлено!</div>
        </div>
    </section>
    <h2 class="main-title text-center dark-blue-text">---</h2>
    <footer class="col-md-12 content" id="contact">
        <div class="col-lg-6 col-md-6 last">
            <img src="img/6.png" alt="Image" class="tm-image">
        </div>
        <div class="col-lg-6 col-md-6 background last about-text-container">
            <h2 class="section-title">Наші контакти</h2>
            <p class="about-text">https://domslugba.com/ua/rovno.html </p>
            <p class="about-text">0 800 50 7525</p>
            <p class="about-text">https://www.facebook.com/domovaslugba.ua/</p>
            <p class="about-text"><a href="https://domslugba.prom.ua/	" target="_blank">domslugba.prom.ua</a></p>
        </div>
    </footer>

</div>

  

