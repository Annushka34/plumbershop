@model IEnumerable<DAL.Models.User>

@{
    ViewData["Title"] = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Test</h2>

    <p>
       
    </p>
    <section class="col-md-12 content" id="clients">
        <div class="col-lg-12 col-md-12 content-item background flexbox">
            <h2 class="section-title">Список користувачів системи</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Password)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Role)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Role)
                            </td>
                            <td>
                                <button type="button"><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></button>
                                <button type="button"><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove"></i></a></button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
            <a href="~/Home/Index">Home</a>
    </section>
</div>
